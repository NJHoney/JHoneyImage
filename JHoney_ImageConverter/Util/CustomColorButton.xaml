<UserControl x:Class="JHoney_ImageConverter.Util.CustomColorButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JHoney_ImageConverter.Util"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="{x:Type Rectangle}">
            <Setter Property="Fill" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type UserControl}},Path=FillRect}" />
        </Style>
    </UserControl.Resources>
    <Border Height="45" BorderBrush="{StaticResource MahApps.Brushes.Accent}" BorderThickness="1" Background="Transparent">
        <StackPanel Orientation="Horizontal" Margin="5">

            <Rectangle Width="30" Height="30" Stroke="Black" >
                
            </Rectangle>
            <TextBlock Text="Color" VerticalAlignment="Center" Margin="5" />
        </StackPanel>
    </Border>
</UserControl>
